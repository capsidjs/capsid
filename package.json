{
  "name": "capsid",
  "version": "0.19.0",
  "description": "A library for component-based DOM programming",
  "main": "index.js",
  "unpkg": "dist/capsid.min.js",
  "scripts": {
    "clean": "rimraf _book coverage",
    "book": "gitbook serve",
    "gh-pages": "npm run clean && gitbook build && gh-pages -o hub -d _book",
    "lint": "standard",
    "fix": "prettier --write --no-semi --single-quote --print-width 1000 *.js 'src/**/*.js' && standard --fix",
    "flow": "flow",
    "karma": "karma start",
    "test": "run-s lint flow karma",
    "all": "npm run lint && npm run flow && npm run test",
    "test-firefox": "karma start --browsers Firefox",
    "codecov": "codecov",
    "dist": "gulp dist",
    "size": "gulp browser && gzip-size dist/capsid.min.js",
    "prepublish": "npm run clean && npm run dist",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/capsidjs/capsid.git"
  },
  "keywords": [
    "dom",
    "element",
    "coelement",
    "capsid",
    "class-component",
    "MVC",
    "MVP",
    "PAC",
    "frontend",
    "UI",
    "framework"
  ],
  "author": "Yoshiya Hinosawa <stibium121@gmail.com> (https://twitter.com/kt3k)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/capsidjs/capsid/issues"
  },
  "homepage": "https://github.com/capsidjs/capsid",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.0",
    "babel-plugin-espower": "^2.2.0",
    "babel-plugin-istanbul": "^4.0.0",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-power-assert": "^1.0.0",
    "babelify": "^8.0.0",
    "browserify": "^15.0.0",
    "chai": "^4.1.2",
    "codecov": "^3.0.0",
    "dom-gen": "^2.3.0",
    "eslint-plugin-flowtype": "^2.20.0",
    "flow-bin": "^0.65.0",
    "gh-pages": "^1.0.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^7.0.0",
    "gulp-if": "^2.0.2",
    "gulp-rename": "^1.2.2",
    "gulp-uglify": "^3.0.0",
    "gzip-size-cli": "^2.1.0",
    "jquery": "^3.0.0",
    "karma": "^2.0.0",
    "karma-browserify": "^5.0.4",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.0.1",
    "lint-staged": "^6.0.0",
    "merge-stream": "^1.0.1",
    "mocha": "^5.0.0",
    "npm-run-all": "^4.1.2",
    "power-assert": "^1.4.1",
    "prettier": "^1.9.2",
    "rimraf": "^2.5.2",
    "rollup-plugin-flow": "^1.0.1",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-stream": "^1.18.0",
    "standard": "^10.0.3",
    "testdouble": "^3.2.6",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0",
    "watchify": "^3.7.0"
  },
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false,
          "loose": true
        }
      ]
    ],
    "plugins": [
      "transform-flow-strip-types"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "env": [
      "browser",
      "jquery",
      "mocha"
    ],
    "ignore": [
      "/dist",
      "jquery.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --no-semi --single-quote --print-width 1000",
      "standard --fix",
      "git add"
    ]
  }
}
