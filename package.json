{
  "name": "capsid",
  "version": "0.3.1",
  "description": "Class driven component framework",
  "main": "dist/capsid-commonjs.js",
  "unpkg": "dist/capsid.min.js",
  "scripts": {
    "clean": "rimraf coverage dist/*",
    "lint": "standard",
    "flow": "flow",
    "test": "karma start karma.conf.js",
    "all": "npm run lint && npm run flow && npm run test",
    "test-firefox": "karma start karma.conf.js --browsers Firefox",
    "codecov": "codecov",
    "dist": "gulp dist",
    "size": "gulp browser && cat dist/capsid.min.js | gzip | wc -c",
    "prepublish": "npm run clean && npm run dist"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/kt3k/capsid.git"
  },
  "keywords": [
    "dom",
    "element",
    "coelement",
    "capsid",
    "class-component",
    "MVC",
    "MVP",
    "PAC",
    "frontend",
    "UI",
    "framework"
  ],
  "author": "Yoshiya Hinosawa <stibium121@gmail.com> (https://twitter.com/kt3k)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kt3k/capsid/issues"
  },
  "homepage": "https://github.com/kt3k/capsid",
  "devDependencies": {
    "babel-eslint": "^7.0.0",
    "babel-plugin-espower": "^2.2.0",
    "babel-plugin-istanbul": "^4.0.0",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-power-assert": "^1.0.0",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "chai": "^3.5.0",
    "codecov": "^1.0.1",
    "dom-gen": "^2.3.0",
    "eslint-plugin-flowtype": "^2.20.0",
    "flow-bin": "^0.39.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-rename": "^1.2.2",
    "gulp-uglify": "^2.0.0",
    "jquery": "^3.0.0",
    "karma": "^1.1.1",
    "karma-browserify": "^5.0.4",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.0.1",
    "mocha": "^3.0.0",
    "power-assert": "^1.4.1",
    "rimraf": "^2.5.2",
    "rollup-plugin-flow": "^1.0.1",
    "rollup-stream": "^1.18.0",
    "standard": "^8.2.0",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.7.0"
  },
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false,
          "loose": true
        }
      ]
    ],
    "plugins": [
      "transform-flow-strip-types"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "env": [
      "browser",
      "jquery",
      "mocha"
    ],
    "ignore": [
      "/dist",
      "jquery.js"
    ]
  }
}
