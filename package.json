{
  "name": "class-component",
  "version": "10.0.0",
  "description": "Yet another view framework",
  "main": "lib/class-component.js",
  "scripts": {
    "clean": "rimraf coverage dist/*",
    "lint": "eslint src spec karma.*",
    "test": "karma start karma.conf.js",
    "codecov": "codecov",
    "dist:lib": "babel src -d lib",
    "dist:dist": "browserify src/class-component.js -t babelify > dist/class-component.js ; uglifyjs dist/class-component.js -m -c > dist/class-component.min.js",
    "dist": "npm-run-all -p dist:*",
    "prepublish": "npm run clean && npm run dist"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/kt3k/class-component.git"
  },
  "keywords": [
    "class-component"
  ],
  "author": "Yoshiya Hinosawa <stibium121@gmail.com> (https://twitter.com/kt3k)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kt3k/class-component/issues"
  },
  "homepage": "https://github.com/kt3k/class-component",
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "babel-plugin-espower": "^2.2.0",
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.0",
    "browserify-istanbul": "^2.0.0",
    "codecov": "^1.0.1",
    "dom-gen": "^2.1.0",
    "eslint": "^3.0.1",
    "eslint-config-standard": "^5.3.0",
    "eslint-plugin-promise": "^2.0.0",
    "eslint-plugin-standard": "^2.0.0",
    "isparta": "^4.0.0",
    "istanbul": "^0.4.3",
    "jquery": "^3.0.0",
    "karma": "^1.0.0",
    "karma-browserify": "^5.0.4",
    "karma-chrome-launcher": "^1.0.1",
    "karma-coverage": "^1.0.0",
    "karma-coveralls": "^1.1.2",
    "karma-mocha": "^1.0.1",
    "mocha": "^2.3.2",
    "npm-run-all": "^2.0.0",
    "power-assert": "^1.4.1",
    "rimraf": "^2.5.2",
    "uglify-js": "^2.6.1",
    "watchify": "^3.7.0"
  },
  "eslintConfig": {
    "extends": "standard",
    "env": {
      "browser": true,
      "mocha": true
    },
    "globals": {
      "jQuery": false
    }
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "espower"
    ]
  }
}
